#include "variadic_functions.h"
#include <stdio.h>
#include <stdarg.h>
/**
 * print_all - print any arguments
 * @format: is a char
 * Return: 0 (success)
 */
void print_all(const char * const format, ...)
{       
	va_list ptr;
	int i = 0;
	char *s;

	va_start(ptr, format);
	while(i < strlen(format))
	{
		if (*(format + i) == 's' || *(format + i) == 'c' || *(format + i) == 'f' || *(format + i) == 'i')
		{
			s = va_agr(ptr, char, int, float, char *);
			if (*(format + i) == 's' && s == NULL)
				printf("(nil)");
			else
				printf(%*(format + i), s);
			printf(",");
		}
	}
	printf("\n");
	va_end(ptr);
}
